<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="http://localhost:3000/">The Wagoners ! </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/cocktails">Cocktails list</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/cocktails/new">Create a new one</a>
        </li>
      </ul>
    </div>
  </nav>

<div class='container'>

  <div id="first-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-80" src="../../assets/cocktail1.jpeg" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <h1>The Wagoners ! </h1>
            <h5>Taste the difference</h5>
          </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-80" src="../../assets/cocktail2.jpeg" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>Best Parisian Bootcamp cocktails</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-80" src="../../assets/cocktail3.jpeg" alt="Third slide">
      </div>
    </div>
  </div>


  <div class="cocktails-container ">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;">
        <% if cocktail.photo.attached?  %>
          <%= cl_image_tag(cocktail.photo.key, width: 285, height: 280, crop: :fill) %>
        <% else  %>
              <%= image_tag "https://www.paris-cocktail-festival.com/uploads/big_pics/HAVANA-CLUB-Cancha-ambiance-800x800.jpg" %>
        <% end  %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
            <%= link_to "Let's see it" , cocktail_path(cocktail) %>
        </div>
      </div>
      <% end %>
  </div>
</div>
