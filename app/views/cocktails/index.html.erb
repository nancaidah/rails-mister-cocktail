<div class='container'>

  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="../../assets/cocktail1.jpeg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="../../assets/cocktail2.jpeg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="../../assets/cocktail3.jpeg" alt="Third slide">
      </div>
    </div>
  </div>


  <div class="cocktails-container ">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" <%= cl_image_tag("qcxyvjubiul8barocg1x", width: 400, height: 300, crop: :fill)%>/>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
            <%= link_to "Let's see it" , cocktail_path(cocktail) %>
        </div>
        </div>
      <% end %>
  </div>
